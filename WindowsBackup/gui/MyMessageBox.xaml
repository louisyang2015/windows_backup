<Window x:Class="WindowsBackup.MyMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsBackup"
        mc:Ignorable="d"
        Title="MyMessageBox" Height="300" Width="300"
        Loaded="Window_Loaded" FontSize="14" ResizeMode="NoResize">

  <StackPanel>

    <TextBox Name="Message_tb" TextWrapping="Wrap" AcceptsReturn="True"
             Margin="10" IsReadOnly="True" MaxHeight="400"
             VerticalScrollBarVisibility="Auto" />

    <Button DockPanel.Dock="Bottom" HorizontalAlignment="Right"
            Margin="0, 0, 10, 10" Padding="20, 3, 20, 3"
            Click="OK_btn_Click">OK</Button>
  </StackPanel>
</Window>
